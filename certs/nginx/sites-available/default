server {
    server_name web.game.com;

    listen 80;

    return 301 https://$server_name$request_uri;
}


server {
    server_name web.game.com;

    listen 443 ssl;
    include snippets/self-signed-cert.conf;
    include snippets/ssl-params.conf;

    location / {
        proxy_pass http://localhost:3000;
    }

}


